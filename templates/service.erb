[Unit]
Description=spiped tunnel (<%= @name %>)

[Service]
User=<%= $user %>
<% if @type == 'client' %>
ExecStart=/usr/bin/spiped -e -D -g -F -k '<%= @keyfile %>' -p /dev/null -s '<%= @source %>' -t '<%= @dest %>'
<% else %>
ExecStart=/usr/bin/spiped -d -g -F -k '<%= @keyfile %>' -p /dev/null -s '<%= @source %>' -t '<%= @dest %>'
<% end %>
Restart=always

[Install]
WantedBy=multi-user.target
